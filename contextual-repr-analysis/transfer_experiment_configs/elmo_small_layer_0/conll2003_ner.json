{
    "dataset_reader": {
        "type": "conll2003_ner"
    },
    "train_data_path": "data/ner/eng.train",
    "validation_data_path": "data/ner/eng.testa",
    "test_data_path": "data/ner/eng.testb",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "contextualizer": {
            "type": "elmo_contextualizer",
            "batch_size": 80,
            "layer_num": 0,
            "elmo": {
                "weight_file": "contextualizers/elmo_small/elmo_small_weights.hdf5",
                "options_file": "contextualizers/elmo_small/elmo_small_options.json",
                "requires_grad": false,
                "num_output_representations": 1,
                "dropout": 0.0
            }
        },
        "pretrained_file": std.extVar('pretrained_file'),
        "transfer_contextualizer_from_pretrained_file": true,
        "transfer_encoder_from_pretrained_file": false,
        "token_representation_dim": 256,
        "calculate_span_f1": true,
        "label_encoding": "IOB1"
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
