{
    "dataset_reader": {
        "type": "conll2000_chunking",
        "contextualizer": {
            "type": "glove_contextualizer",
            "embedding_dim": 300,
            "glove_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz"
        }
    },
    "validation_dataset_reader": {
        "type": "conll2000_chunking",
        "contextualizer": {
            "type": "glove_contextualizer",
            "embedding_dim": 300,
            "glove_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz"
        }
    },
    "train_data_path": "data/chunking/eng_chunking_train.conll",
    "validation_data_path": "data/chunking/eng_chunking_dev.conll",
    "test_data_path": "data/chunking/eng_chunking_test.conll",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "token_representation_dim": 300,
        "calculate_span_f1": true,
        "label_encoding": "BIO"
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
