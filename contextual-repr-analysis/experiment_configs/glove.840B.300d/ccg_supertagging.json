{
    "dataset_reader": {
        "type": "ccg_supertagging",
        "contextualizer": {
            "type": "glove_contextualizer",
            "embedding_dim": 300,
            "glove_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz"
        }
    },
    "validation_dataset_reader": {
        "type": "ccg_supertagging",
        "contextualizer": {
            "type": "glove_contextualizer",
            "embedding_dim": 300,
            "glove_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz"
        }
    },
    "train_data_path": "data/ccg/train.txt",
    "validation_data_path": "data/ccg/dev.txt",
    "test_data_path": "data/ccg/test.txt",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "token_representation_dim": 300
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
