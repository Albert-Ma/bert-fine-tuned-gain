{
    "dataset_reader": {
        "type": "semantic_dependency_arc_prediction",
        "contextualizer": {
            "type": "glove_contextualizer",
            "embedding_dim": 300,
            "glove_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz"
        },
        "negative_sampling_method": "balanced",
        "include_raw_tokens": false
    },
    "validation_dataset_reader": {
        "type": "semantic_dependency_arc_prediction",
        "contextualizer": {
            "type": "glove_contextualizer",
            "embedding_dim": 300,
            "glove_path": "https://s3-us-west-2.amazonaws.com/allennlp/datasets/glove/glove.840B.300d.txt.gz"
        },
        "negative_sampling_method": "balanced",
        "include_raw_tokens": false
    },
    "train_data_path": "data/semantic_dependency/english_dm_augmented_train.sdp",
    "validation_data_path": "data/semantic_dependency/english_dm_augmented_dev.sdp",
    "test_data_path": "data/semantic_dependency/english_id_dm_augmented_test.sdp",
    "evaluate_on_test" : true,
    "model": {
        "type": "pairwise_tagger",
        "token_representation_dim": 300,
        "combination": "x,y,x*y"
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
