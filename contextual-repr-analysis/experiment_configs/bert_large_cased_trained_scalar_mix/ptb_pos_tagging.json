{
    "dataset_reader": {
        "type": "conllx_pos"
    },
    "train_data_path": "data/pos/wsj.train.conllx",
    "validation_data_path": "data/pos/wsj.dev.conllx",
    "test_data_path": "data/pos/wsj.test.conllx",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "contextualizer": {
            "type": "scalar_mixed_precomputed_contextualizer",
            "representations_path": "contextualizers/bert_large_cased/ptb_pos.hdf5",
            "num_layers": 25
        },
        "token_representation_dim": 1024
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
