{
    "dataset_reader": {
        "type": "semantic_tagging"
    },
    "train_data_path": "data/semantic_tagging/semtag_train.conll",
    "validation_data_path": "data/semantic_tagging/semtag_dev.conll",
    "test_data_path": "data/semantic_tagging/semtag_test.conll",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "decoder": "mlp",
        "encoder": {
            "type": "lstm",
            "input_size": 1024,
            "hidden_size": 512,
            "bidirectional": true,
            "num_layers": 2
        },
        "contextualizer": {
            "type": "elmo_contextualizer",
            "batch_size": 80,
            "elmo": {
                "weight_file": "contextualizers/elmo_original_randomly_initialized/elmo_original_randomly_initialized_weights.hdf5",
                "options_file": "contextualizers/elmo_original_randomly_initialized/elmo_original_randomly_initialized_options.json",
                "requires_grad": true,
                "num_output_representations": 1,
                "dropout": 0.0
            }
        },
        "token_representation_dim": 1024
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
