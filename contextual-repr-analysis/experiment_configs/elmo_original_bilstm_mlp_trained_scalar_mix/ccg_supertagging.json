{
    "dataset_reader": {
        "type": "ccg_supertagging"
    },
    "train_data_path": "data/ccg/train.txt",
    "validation_data_path": "data/ccg/dev.txt",
    "test_data_path": "data/ccg/test.txt",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "encoder": {
            "type": "lstm",
            "input_size": 1024,
            "hidden_size": 512,
            "bidirectional": true,
            "num_layers": 2
        },
        "decoder": "mlp",
        "contextualizer": {
            "type": "scalar_mixed_precomputed_contextualizer",
            "representations_path": "contextualizers/elmo_original/ccg.hdf5",
            "num_layers": 3
        },
        "token_representation_dim": 1024
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
