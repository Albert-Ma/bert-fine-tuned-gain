{
    "dataset_reader": {
        "type": "conll2000_chunking"
    },
    "train_data_path": "data/chunking/eng_chunking_train.conll",
    "validation_data_path": "data/chunking/eng_chunking_dev.conll",
    "test_data_path": "data/chunking/eng_chunking_test.conll",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "contextualizer": {
            "type": "scalar_mixed_precomputed_contextualizer",
            "representations_path": "contextualizers/elmo_original_randomly_initialized/conll2000_chunking.hdf5",
            "num_layers": 3
        },
        "token_representation_dim": 1024,
        "calculate_span_f1": true,
        "label_encoding": "BIO"
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
