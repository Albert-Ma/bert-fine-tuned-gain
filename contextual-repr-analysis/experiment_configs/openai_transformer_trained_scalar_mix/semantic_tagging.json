{
    "dataset_reader": {
        "type": "semantic_tagging"
    },
    "train_data_path": "data/semantic_tagging/semtag_train.conll",
    "validation_data_path": "data/semantic_tagging/semtag_dev.conll",
    "test_data_path": "data/semantic_tagging/semtag_test.conll",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "contextualizer": {
            "type": "scalar_mixed_precomputed_contextualizer",
            "representations_path": "contextualizers/openai_transformer/semantic_tagging.hdf5",
            "num_layers": 13
        },
        "token_representation_dim": 768
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": 0,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
