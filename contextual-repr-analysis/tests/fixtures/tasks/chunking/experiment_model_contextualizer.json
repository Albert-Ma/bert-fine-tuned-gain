{
    "dataset_reader": {
        "type": "conll2000_chunking"
    },
    "train_data_path": "tests/fixtures/data/chunking/conll.txt",
    "validation_data_path": "tests/fixtures/data/chunking/conll.txt",
    "model": {
        "type": "tagger",
        "token_representation_dim": 1024,
        "contextualizer": {
            "type": "scalar_mixed_precomputed_contextualizer",
            "representations_path": "tests/fixtures/contextualizers/precomputed_elmo/elmo_layers_all.hdf5",
            "num_layers": 3
        },
        "decoder": {
            "input_dim": 1024,
            "hidden_dims": 8,
            "num_layers": 1,
            "activations": "linear"
        },
        "calculate_span_f1": true,
        "label_encoding": "BIO"
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 1,
        "grad_norm": 1.0,
        "patience": 500,
        "cuda_device": -1,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adadelta",
            "lr": 0.000001,
            "rho": 0.95
        }
    }
}
