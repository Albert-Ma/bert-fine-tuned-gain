{
    "dataset_reader": {
        "type": "conll2003_ner"
    },
    "train_data_path": "data/ner/qnli_truncated_train.txt",
    "validation_data_path": "data/ner/qnli_truncated_dev.txt",
    "test_data_path": "data/ner/qnli_truncated_test.txt",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "contextualizer": {
            "type": "scalar_mixed_precomputed_contextualizer",
            "representations_path": "contextualizers/bert_base_cased/ner/qnli_conll2003_ner.hdf5",
            "num_layers": 12
        },
        "token_representation_dim": 768,
        "calculate_span_f1": true,
        "label_encoding": "BIO"
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": -1,
        "validation_metric": "+f1-measure-overall",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
