{
    "dataset_reader": {
        "type": "conllu_pos"
    },
    "train_data_path": "data/pos/qqp_truncated_sda_en_ewt-ud-train.conllu",
    "validation_data_path": "data/pos/qqp_truncated_sda_en_ewt-ud-dev.conllu",
    "test_data_path": "data/pos/qqp_truncated_sda_en_ewt-ud-test.conllu",
    "evaluate_on_test" : true,
    "model": {
        "type": "tagger",
        "contextualizer": {
            "type": "scalar_mixed_precomputed_contextualizer",
            "representations_path": "contextualizers/qqp/pos/ewt_pos.hdf5",
            "num_layers": 12
        },
        "token_representation_dim": 768
    },
    "iterator": {
        "type": "basic",
        "batch_size" : 80
    },
    "trainer": {
        "num_epochs": 50,
        "patience": 3,
        "cuda_device": -1,
        "validation_metric": "+accuracy",
        "optimizer": {
            "type": "adam",
            "lr": 0.001
        }
    }
}
